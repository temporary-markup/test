$class = expander

.{$class}

	&__content
		overflow hidden
		height 0
		opacity 0
		transition-property opacity, height
		transition-timing-function cubic-bezier(.1, 0, .25, 1)
		transition-duration 200ms


		.{$class}_mod_visible &
			height auto
			opacity 1

		&__container
			overflow hidden

	&__icon
		margin 2em auto
		display block
		width 50px
		height 32px
		background url(expander/expander__icon.png)
		cursor pointer

		.{$class}_mod_visible &
			display none