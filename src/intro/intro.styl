$class = intro

.{$class}

	&__h1
		margin 100px 0 0
		font-family 'ProximaNova Bold', sans-serif
		font-size 50px
		line-height 1
		font-weight bold
		text-transform uppercase

	&__h3
		margin .5em auto 0
		font-family 'ProximaNova Regular', sans-serif
		font-size 25px
		line-height 1.1
		max-width 610px

	&__p
		margin 2em 0 0
		font-family 'ProximaNova Light', sans-serif
		font-size 18px
		line-height 1.2